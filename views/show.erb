<div data-role="page" data-cache="false">
  <div data-role="header">
    <a href="/" data-icon="arrow-l">Back</a>
    <h1><%=h @route[:name] %></h1> 
    <a href="javascript:void(0)" onclick="$.mobile.changePage('/<%= params['direction'] %>', {reloadPage: true, changeHash: false},{ allowSamePageTranstion: true},{ transition: 'none'}); return false;" data-icon="refresh" class="ui-btn-right">Refresh</a>
  </div> 
  <div data-role="content">
    <% if @data.empty? %>
      <h2>No predictions... time to call a cab.</h2>
    <% else %>
      <ul data-role="listview">
        <% @data.each do |route| %>
          <li>
            <h2><%=h route[:tag] %> @ <%=h route[:stop] %></h2>
            <p>arrives in <%= route[:times][:start] %> minutes</p>
            <p>should get you home by <%= format_time(route[:times][:final]) %></p>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div> 
  <div data-role="footer" data-position="fixed" data-id="footer" class="ui-bar">
    <h4><a href="mailto:bob@kludgebox.com?subject=muniup+feedback">Send Feedback</a></h4>
  </div>
</div>
